<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginTop="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wci_cardwiew_txt_day"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:fontFamily="@font/notosans_bold"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/wci_cardwiew_txt_liturgical_day"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosans_bold"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/wci_cardwiew_txt_day"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:textAlignment="viewStart" />

        <TextView
            android:id="@+id/wci_cardwiew_txt_day_week"
            android:layout_width="40dp"
            android:layout_height="31dp"
            android:fontFamily="@font/notosans_bold"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wci_cardwiew_txt_day"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/wci_cardwiew_txt_to_day_gospel"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/notosans_bold"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/wci_cardwiew_txt_day_week"
            app:layout_constraintTop_toBottomOf="@+id/wci_cardwiew_txt_liturgical_day"
            app:layout_constraintVertical_bias="0" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B9B9B9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wci_cardwiew_txt_to_day_gospel"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/wci_cardwiew_txt_content"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginLeft="42dp"
            android:fontFamily="@font/notosans_bold"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wci_cardwiew_txt_to_day_gospel"
            app:layout_constraintVertical_bias="0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>